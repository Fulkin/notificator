<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Notificator</display-name>

    <servlet>
        <servlet-name>notificatorTeamLeadServlet</servlet-name>
        <servlet-class>com.teamservice.notificator.web.NotificatorTeamLeadServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>notificatorTeamLeadServlet</servlet-name>
        <url-pattern>/notificator_team_lead</url-pattern>
    </servlet-mapping><servlet>
        <servlet-name>notificatorLectorServlet</servlet-name>
        <servlet-class>com.teamservice.notificator.web.NotificatorLectorServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>notificatorLectorServlet</servlet-name>
        <url-pattern>/notificator_lector</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>
            com.teamservice.notificator.listener.BackgroundJobManager
        </listener-class>
    </listener>
</web-app>